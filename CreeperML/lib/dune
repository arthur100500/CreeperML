(ocamllex lexer)

(menhir
 (flags --table)
 (modules parser)
 (infer false))

(rule
 (deps parse_errors.messages parser.mly)
 (targets parser_messages.ml)
 (action
  (with-stdout-to
   %{targets}
   (run menhir --compile-errors %{deps}))))

(rule
 (deps bindings.c)
 (targets bindings.co)
 (action
  (run gcc -shared %{deps} -o %{targets})))

(rule
 (deps bindings.c)
 (targets bindings.o)
 (action
  (run gcc -c %{deps} -o %{targets} -w)))

(library
 (name CreeperML)
 (public_name CreeperML)
 (libraries menhirLib llvm)
 (flags :standard -color always -safe-string -warn-error -a+8 -w -50)
 (preprocess
  (pps ppx_expect ppx_deriving.show ppx_compare))
 (inline_tests)
 (instrumentation
  (backend bisect_ppx)))
